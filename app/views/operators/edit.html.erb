<div class="grid_16">
  <div class="box">
    <h4><a><%= t(:Editing_operator) %> - <%=h @operator.login %> - <%=h @wisp.name %></a></h4>
  </div>
</div>
<div class="clear">&nbsp;</div>

<div class="grid_14 prefix_1 suffix_1">
  <div class="box">
    <h2><a href="#" id="toggle-forms"><%=h t(:Editing_operator) %></a></h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:Back),:back %>
      </li>
    </ul>
    <div class="clear">&nbsp;</div>
    <div class="block" id="operator_block">
      <fieldset>
        <legend><%=t :General_infos %></legend>
        <% form_for([@wisp, @operator]) do |f| %>
          <p><%= f.error_messages %></p>
          <p>
            <%= f.label t(:Operator_name) %><br />
            <%= f.text_field :login %>
          </p>
          <p>
            <%= f.label t(:Notes) %><br />
            <%= f.text_area :notes, :rows => 3 %>
          </p>
          <p>
            <%= f.label t(:Roles) %><br />
            <%= select_tag 'roles[]', 
              options_for_select(
                Operator::ROLES.map { |r| [r, r] }, @selected_roles), 
              :multiple => true
            %>
          </p>
          <p>
            <%= f.label t(:Password), f.object.new_record? ? nil : t(:Change_password) %><br />
            <%= f.password_field :password %>
          </p>
          <p>
            <%= f.label t(:Password_confirmation) %><br />
            <%= f.password_field :password_confirmation %>
          </p>
          <p>
            <%= f.submit t(:Update) %>
          </p>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>