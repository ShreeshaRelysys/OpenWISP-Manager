<div class="grid_7 prefix_5">
  <div class="box">
    <h2><%= t(:Please_login) %></h2>
    <div class="block" id="login-forms">
      <fieldset class="login">
        <legend><%=t :Login %></legend>
        <% form_for @operator_session, :url => operator_session_path  do |f| %>
            <p class="notice"></p>
            <p>
              <%= f.label t(:Username) %>
              <%= f.text_field :login %>
            </p>
            <p>
              <%= f.label t(:Password) %>
              <%= f.password_field :password %>
            </p>
            <p>
              <%= f.label t(:Remember_me) %> <%= f.check_box :remember_me %>
            </p>

	    <p>&nbsp;</p>
            <%= f.submit t(:Login), :class =>"login button" %>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>
