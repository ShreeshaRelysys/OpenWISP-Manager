<div class="grid_16">
  <div class="box">
    <h4><a><%= t(:New_template_group) %> - <%=h @wisp.name %></a></h4>
  </div>
</div>
<div class="clear">&nbsp;</div>

<div class="grid_14 prefix_1 suffix_1">
  <div class="box">
    <h2><a href="#" id="toggle-forms"><%=h t(:New_template_group) %></a></h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:Back),:back %>
      </li>
    </ul>
    <div class="clear">&nbsp;</div>
    <div class="block" id="template_group_block">
      <fieldset>
        <legend><%=t :General_infos %></legend>
        <% form_for([@wisp, @template_group]) do |f| %>
          <p><%= f.error_messages %></p>
          <p>
            <%= f.label t(:Name) %><br />
            <%= f.text_field :name, :maxlength => 32 %>
          </p>
          <p>
            <%= f.label t(:Notes) %><br />
            <%= f.text_area :notes, :rows => 3 %>
          </p>
          <p>
            <% unless @wisp.access_point_templates.nil? or @wisp.access_point_templates.length == 0  %>
              <%= render :partial => 'access_point_templates', :object => @wisp.access_point_templates, :as => :access_point_templates, :locals => { :selected_access_point_templates => @selected_access_point_templates } %>
            <% else %>
              <%= t(:No_access_point_template) %>
            <% end %>
          </p>
          <p>
            <%= f.submit t(:Create) %>
          </p>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>